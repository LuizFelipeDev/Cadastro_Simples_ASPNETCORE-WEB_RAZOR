@model IEnumerable<AulaCoreDesktop.Data.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CliNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CliEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CliCpf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CliNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CliEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CliCpf)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CliId">Edit</a> |
